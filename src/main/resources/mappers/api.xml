<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oopsw.selfit.repository.ApiRepository">
    <insert id="addFoodApi" parameterType="java.util.List">
        INSERT INTO FOOD
        (FOOD_NAME, FOOD_WEIGHT, UNIT_KCAL)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (
            #{item.foodNm},
            #{item.foodSize},
            CAST(#{item.enerc} AS UNSIGNED)
            )
        </foreach>

    </insert>
    <select id="existsFoodByFoodCd" resultType="int" parameterType="string">
        SELECT COUNT(1)
        FROM FOOD
        WHERE 식품_ID = #{foodCd}
    </select>
    <insert id="addExerciseApi" parameterType="java.util.List">
        INSERT INTO EXERCISE
        (EXERCISE_NAME, MET)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (
            #{item.exerciseName},
            #{item.met}
            )
        </foreach>
    </insert>
</mapper>
